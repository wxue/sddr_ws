<launch>
  <param name="simple_differential_drive_robot"
    command="$(find xacro)/xacro --inorder '$(find sddr_description)/urdf/simple_differential_drive_robot.xacro'" />

  <!-- send fake joint values -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="TRUE"/>
  </node>

  <!-- Combine joint values -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"/>

  <!-- Show in Rviz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find sddr_description)/launch/simple_differential_drive_robot.rviz"/>

  <!-- Start the teleop -->
  <include file="$(find turtlebot_teleop)/launch/keyboard_teleop.launch"/>
</launch>
