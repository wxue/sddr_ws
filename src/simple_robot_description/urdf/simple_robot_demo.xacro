<?xml version="1.0"?>

<robot name="simple_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!--quick settings - robot partials(wheels) values-->
  <xacro:property name="wheelLen" value="0.022" />
  <xacro:property name="wheelRad" value="0.1" />
  
  <!-- <link name="world">
  </link>

  <joint name="base_to_world" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
  </joint> -->

  <!--default inertial macro-->
  <xacro:macro name="default_inertial" params="mass">
    <inertial>
      <mass value="${mass}" />
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" />
    </inertial>
  </xacro:macro>


<!--modeling robot body-->

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.01 0.22 0.01"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="red">
        <color rgba="0.8 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.22 0.01"/>
      </geometry>
    </collision>
    <xacro:default_inertial mass="1.0"/>
  </link>
  
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="${wheelLen}" radius="${wheelRad}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="blue">
        <color rgba="0.0 0.0 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${wheelLen}" radius="${wheelRad}"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>1000000</mu>
            <mu2>100</mu2>
            <slip1>0</slip1>
            <slip2>0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>
    <xacro:default_inertial mass="3.0"/>
  </link>
  
  <joint name="base_to_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.110 0" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1" />
  </joint>
  
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="${wheelLen}" radius="${wheelRad}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="blue">
        <color rgba="0.0 0.0 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${wheelLen}" radius="${wheelRad}"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>1000000</mu>
            <mu2>100</mu2>
            <slip1>0</slip1>
            <slip2>0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>
    <xacro:default_inertial mass="3.0"/>
  </link>
  
  <joint name="base_to_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.110 0" rpy="-1.5708 0 0"/>
    <axis xyz="0 0 1" />
  </joint>
  
  <link name="body_shphere">
    <visual>
      <geometry>
        <sphere radius="0.085"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="darkgray">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
    <xacro:default_inertial mass="8.0"/>
  </link>
  
  <joint name="base_to_body_shphere" type="fixed">
    <parent link="base_link"/>
    <child link="body_shphere"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!--gazebo plugin-->
  <gazebo>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>30</updateRate>
      <leftJoint>base_to_left_wheel</leftJoint>
      <rightJoint>base_to_right_wheel</rightJoint>
      <wheelSeparation>0.23</wheelSeparation>
      <wheelDiameter>0.092</wheelDiameter>
      <torque>20</torque>
      <commandTopic>/cmd_vel_mux/input/teleop</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_link</robotBaseFrame>
   </plugin>
  </gazebo>
</robot>
